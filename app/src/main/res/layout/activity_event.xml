<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/eventLayout"
    android:layout_gravity="start"
    tools:context="com.calendar_client.ui.EventActivity"
    android:padding="6dp"
    android:background="@drawable/calendario_background">

    <TextView

            android:layout_margin="6dp"
            android:gravity="center"
            android:text="@string/event_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            android:id="@+id/tvLayoutTitle"
        android:fontFamily="sans-serif-smallcaps"
        android:textColor="@color/colorPrimary"
        android:textStyle="normal|bold"
        android:textSize="24sp"
        android:padding="6dp" />

        <LinearLayout
            android:id="@+id/titleLayout"
            android:layout_below="@+id/tvLayoutTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="3dp"
            android:layout_gravity="start"
            android:padding="3dp">
            <ImageView
                android:contentDescription="@string/title"
                android:layout_gravity="center|start"
                android:src="@drawable/ic_details"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:id="@+id/imgViewDetails"
                android:layout_margin="5dp"
                android:padding="5dp" />

            <TextView
                android:layout_gravity="center|start"
                android:gravity="center|start"
                android:text="Title"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/tvEventTitle"
                android:textColor="@color/colorPrimary"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:padding="5dp"
                android:fontFamily="sans-serif-condensed" />


            <TextView
                android:gravity="center|start"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center|start"
                android:layout_weight="2"
                android:layout_margin="5dp"
                android:padding="5dp"
                android:textSize="14sp"
                android:fontFamily="sans-serif-condensed" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/dateStarLayout"
            android:layout_below="@+id/titleLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="3dp"
            android:layout_gravity="start"
            android:padding="3dp">

            <ImageView
                android:contentDescription="@string/date"
                android:layout_gravity="center|start"
                android:id="@+id/imgViewTime"
                android:src="@drawable/ic_access_time"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:layout_margin="5dp"
                android:padding="5dp" />

            <TextView
                android:layout_gravity="center|start"
                android:gravity="center|start"
                android:text="Date"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/tvEventDateStart"
                android:textColor="@color/colorPrimaryDark"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:padding="5dp"
                android:fontFamily="sans-serif-condensed" />

            <TextView
                android:gravity="center|start"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center|start"
                android:layout_weight="2"
                android:layout_margin="5dp"
                android:padding="5dp" />


        </LinearLayout>

    <LinearLayout
        android:id="@+id/dateEndLayout"
        android:layout_below="@+id/dateStarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3"
        android:layout_margin="3dp"
        android:layout_gravity="start"
        android:padding="3dp">

        <TextView
            android:gravity="start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_weight="0.5"
            android:layout_margin="5dp" />

        <TextView
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_gravity="start"
            android:gravity="start"
            android:text="Date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/tvEventDateEnd"
            android:textColor="@color/colorPrimaryDark"
            android:layout_weight="1.5"
            android:layout_margin="5dp" />

        <TextView
            android:gravity="start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_weight="1"
            android:layout_margin="5dp" />


    </LinearLayout>
        <LinearLayout
            android:id="@+id/descriptionLayout"
            android:layout_below="@+id/dateEndLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3"
            android:layout_margin="5dp"
            android:layout_gravity="start"
            >

            <ImageView
                android:contentDescription="@string/description"
                android:layout_gravity="start"
                android:id="@+id/imgViewDescription"
                android:src="@drawable/ic_description"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                />


            <TextView
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:text="Description"
                android:gravity="start"
                android:layout_gravity="start"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimaryDark"
                android:id="@+id/tvEventDescription"
                android:layout_weight="1"
                />

            <TextView
                android:gravity="start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_weight="1"
                />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/locationLayout"
            android:layout_below="@+id/descriptionLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="3"
            android:layout_margin="5dp"
            android:layout_gravity="start"
            >
            <ImageView
                android:contentDescription="@string/location"
                android:layout_gravity="start"
                android:src="@drawable/ic_location_on"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:id="@+id/imgViewLocation"
                />

            <TextView
                android:layout_gravity="start"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:gravity="start"
                android:text="Location"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/tvEventLocation"
                android:textColor="@color/colorPrimaryLight"
                android:layout_weight="1.5" />

            <TextView
                android:gravity="start"
                android:layout_gravity="start"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimaryDark"
                android:layout_weight="1" />

        </LinearLayout>

    <android.support.design.widget.CoordinatorLayout
        android:id="@+id/cardLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.CardView
            app:cardBackgroundColor="@color/colorPrimaryOpacity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

        </android.support.v7.widget.CardView>
    </android.support.design.widget.CoordinatorLayout>

    <android.support.v7.widget.AppCompatButton
            android:layout_marginTop="10dp"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/locationLayout"
            android:id="@+id/btnShowMore"
            android:text="@string/event_btn_show_more"
            android:background="@color/colorPrimary"
            android:textColor="@color/white"
            android:padding="10dp"
            />


        <TextView
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/event_contacts"
            android:layout_below="@+id/btnShowMore"
            android:id="@+id/tvContacts"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:visibility="gone"
            />

        <ListView
            android:layout_below="@+id/tvContacts"
            android:id="@+id/listContacts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            >

        </ListView>

    <LinearLayout
        android:paddingBottom="8dp"
        android:paddingTop="8dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/locationLayout"
        android:layout_alignStart="@+id/locationLayout">

        <android.support.design.widget.FloatingActionButton
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:id="@+id/fabEventEdit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_edit_white"
            />

        <android.support.design.widget.FloatingActionButton
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:id="@+id/fabEventDelete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_delete_forever"
            />
    </LinearLayout>


</RelativeLayout>
