<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="10dp"
    android:layout_margin="5dp"
    android:weightSum="10"
    android:background="@drawable/clickable_text_view">

    <TextView
        android:textColor="@color/colorPrimaryDark"
        android:text="@string/event_admin"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:id="@+id/tvEventAdmin"
        android:layout_weight="2"
        android:fontFamily="sans-serif-condensed"
        android:gravity="center" />

    <TextView
        android:text="to be changed"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:id="@+id/tvUserName"
        android:fontFamily="sans-serif-condensed"
        android:textSize="20sp"
        android:textColor="@color/colorPrimaryLight"
        android:layout_weight="6"
        android:gravity="center" />

    <ImageView
        android:contentDescription="@string/contact"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/imgViewContact"
        android:src="@drawable/ic_perm_contact_calendar"
        android:layout_weight="2" />

</LinearLayout>
